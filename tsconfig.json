{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src"]
}
